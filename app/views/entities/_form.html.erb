
<%= simple_form_for(@entity) do |f| %>
  <div> 
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  </div>
  

  <div class="form-inputs">
    <div class="field">
      <%= f.input :name %>
    </div>
    
    <div class="field">
      <%= f.input :description %>
    </div>
    
    <div class="field">
      <%= f.label :entity_type %>
      <%= f.select :entity_type, Entity.types, include_blank: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
